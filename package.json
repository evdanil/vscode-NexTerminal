{
  "name": "vscode-nexterminal",
  "displayName": "Nexus Terminal",
  "description": "Unified SSH and Serial command center for VS Code.",
  "version": "0.1.7",
  "publisher": "nexus",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/evdanil/vscode-NexTerminal.git"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Terminal",
    "Other"
  ],
  "main": "./dist/extension.js",
  "browser": "./dist/webExtension.js",
  "activationEvents": [
    "onStartupFinished",
    "onView:nexusCommandCenter",
    "onView:nexusTunnels",
    "onCommand:nexus.server.add",
    "onCommand:nexus.server.connect",
    "onCommand:nexus.serial.add",
    "onCommand:nexus.serial.connect"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nexus",
          "title": "Nexus",
          "icon": "media/nexus.svg"
        }
      ]
    },
    "views": {
      "nexus": [
        {
          "id": "nexusCommandCenter",
          "name": "Connectivity Hub"
        },
        {
          "id": "nexusTunnels",
          "name": "Port Forwarding"
        },
        {
          "id": "nexusSettings",
          "name": "Settings"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "nexusCommandCenter",
        "contents": "No servers or serial devices configured.\n[Add SSH Server](command:nexus.server.add)\n[Add Serial Device](command:nexus.serial.add)\n[Scan Serial Ports](command:nexus.serial.listPorts)"
      },
      {
        "view": "nexusTunnels",
        "contents": "No port-forwarding tunnels configured.\n[Add Tunnel](command:nexus.tunnel.add)\nTip: Drag a tunnel onto a server in Connectivity Hub to start it."
      }
    ],
    "commands": [
      { "command": "nexus.refresh", "title": "Nexus: Refresh", "icon": "$(refresh)" },
      { "command": "nexus.server.add", "title": "Nexus: Add Server", "icon": "$(add)" },
      { "command": "nexus.server.edit", "title": "Edit", "icon": "$(edit)" },
      { "command": "nexus.server.remove", "title": "Remove", "icon": "$(trash)" },
      { "command": "nexus.server.connect", "title": "Connect", "icon": "$(plug)" },
      { "command": "nexus.server.disconnect", "title": "Disconnect", "icon": "$(debug-disconnect)" },
      { "command": "nexus.server.copyInfo", "title": "Copy Connection Info", "icon": "$(clippy)" },
      { "command": "nexus.server.duplicate", "title": "Duplicate", "icon": "$(copy)" },
      { "command": "nexus.server.rename", "title": "Rename", "icon": "$(edit)" },
      { "command": "nexus.tunnel.add", "title": "Nexus: Add Tunnel", "icon": "$(add)" },
      { "command": "nexus.tunnel.edit", "title": "Edit", "icon": "$(edit)" },
      { "command": "nexus.tunnel.remove", "title": "Remove", "icon": "$(trash)" },
      { "command": "nexus.tunnel.start", "title": "Start", "icon": "$(play)" },
      { "command": "nexus.tunnel.stop", "title": "Stop", "icon": "$(debug-stop)" },
      { "command": "nexus.tunnel.restart", "title": "Restart", "icon": "$(debug-restart)" },
      { "command": "nexus.tunnel.copyInfo", "title": "Copy Tunnel Info", "icon": "$(clippy)" },
      { "command": "nexus.tunnel.duplicate", "title": "Duplicate", "icon": "$(copy)" },
      { "command": "nexus.serial.add", "title": "Nexus: Add Serial Profile", "icon": "$(add)" },
      { "command": "nexus.serial.edit", "title": "Edit", "icon": "$(edit)" },
      { "command": "nexus.serial.remove", "title": "Remove", "icon": "$(trash)" },
      { "command": "nexus.serial.listPorts", "title": "Nexus: Scan Serial Ports", "icon": "$(search)" },
      { "command": "nexus.serial.connect", "title": "Connect", "icon": "$(plug)" },
      { "command": "nexus.serial.disconnect", "title": "Disconnect", "icon": "$(debug-disconnect)" },
      { "command": "nexus.serial.copyInfo", "title": "Copy Port Info", "icon": "$(clippy)" },
      { "command": "nexus.serial.duplicate", "title": "Duplicate", "icon": "$(copy)" },
      { "command": "nexus.serial.rename", "title": "Rename", "icon": "$(edit)" },
      { "command": "nexus.group.connect", "title": "Connect All", "icon": "$(plug)" },
      { "command": "nexus.group.disconnect", "title": "Disconnect All", "icon": "$(debug-disconnect)" },
      { "command": "nexus.group.rename", "title": "Rename Group", "icon": "$(edit)" },
      { "command": "nexus.settings.edit", "title": "Edit Setting", "icon": "$(edit)" },
      { "command": "nexus.settings.reset", "title": "Reset to Default", "icon": "$(discard)" },
      { "command": "nexus.settings.openJson", "title": "Open Settings JSON", "icon": "$(json)" },
      { "command": "nexus.settings.openLogDir", "title": "Open Log Directory", "icon": "$(folder-opened)" }
    ],
    "menus": {
      "view/title": [
        {
          "command": "nexus.refresh",
          "when": "view =~ /^nexus/",
          "group": "navigation"
        },
        {
          "command": "nexus.server.add",
          "when": "view == nexusCommandCenter",
          "group": "navigation@1"
        },
        {
          "command": "nexus.server.connect",
          "when": "view == nexusCommandCenter",
          "group": "navigation@2"
        },
        {
          "command": "nexus.serial.add",
          "when": "view == nexusCommandCenter",
          "group": "navigation@3"
        },
        {
          "command": "nexus.server.disconnect",
          "when": "view == nexusCommandCenter",
          "group": "navigation@4"
        },
        {
          "command": "nexus.tunnel.add",
          "when": "view == nexusTunnels",
          "group": "navigation@1"
        },
        {
          "command": "nexus.tunnel.start",
          "when": "view == nexusTunnels",
          "group": "navigation@2"
        },
        {
          "command": "nexus.tunnel.stop",
          "when": "view == nexusTunnels",
          "group": "navigation@3"
        },
        {
          "command": "nexus.settings.openLogDir",
          "when": "view == nexusSettings",
          "group": "navigation@1"
        },
        {
          "command": "nexus.settings.openJson",
          "when": "view == nexusSettings",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {"command":"nexus.server.connect","when":"view == nexusCommandCenter && viewItem == nexus.server","group":"inline"},
        {"command":"nexus.server.connect","when":"view == nexusCommandCenter && viewItem == nexus.serverConnected","group":"inline@1"},
        {"command":"nexus.server.disconnect","when":"view == nexusCommandCenter && viewItem == nexus.serverConnected","group":"inline@2"},
        {"command":"nexus.server.disconnect","when":"view == nexusCommandCenter && viewItem == nexus.sessionNode","group":"inline"},

        {"command":"nexus.server.connect","when":"view == nexusCommandCenter && viewItem == nexus.server","group":"0_connect"},
        {"command":"nexus.server.connect","when":"view == nexusCommandCenter && viewItem == nexus.serverConnected","group":"0_connect@1"},
        {"command":"nexus.server.disconnect","when":"view == nexusCommandCenter && viewItem == nexus.serverConnected","group":"0_connect@2"},

        {"command":"nexus.server.edit","when":"view == nexusCommandCenter && viewItem =~ /^nexus\\.server(Connected)?$/","group":"1_manage@1"},
        {"command":"nexus.server.rename","when":"view == nexusCommandCenter && viewItem =~ /^nexus\\.server(Connected)?$/","group":"1_manage@2"},
        {"command":"nexus.server.duplicate","when":"view == nexusCommandCenter && viewItem =~ /^nexus\\.server(Connected)?$/","group":"1_manage@3"},

        {"command":"nexus.server.copyInfo","when":"view == nexusCommandCenter && viewItem =~ /^nexus\\.server(Connected)?$/","group":"2_clipboard"},

        {"command":"nexus.server.remove","when":"view == nexusCommandCenter && viewItem =~ /^nexus\\.server(Connected)?$/","group":"3_destructive"},

        {"command":"nexus.group.connect","when":"view == nexusCommandCenter && viewItem == nexus.group","group":"inline@1"},
        {"command":"nexus.group.disconnect","when":"view == nexusCommandCenter && viewItem == nexus.group","group":"inline@2"},
        {"command":"nexus.group.connect","when":"view == nexusCommandCenter && viewItem == nexus.group","group":"0_connect@1"},
        {"command":"nexus.group.disconnect","when":"view == nexusCommandCenter && viewItem == nexus.group","group":"0_connect@2"},
        {"command":"nexus.group.rename","when":"view == nexusCommandCenter && viewItem == nexus.group","group":"1_manage@1"},
        {"command":"nexus.server.add","when":"view == nexusCommandCenter && viewItem == nexus.group","group":"1_manage@2"},
        {"command":"nexus.serial.add","when":"view == nexusCommandCenter && viewItem == nexus.group","group":"1_manage@3"},

        {"command":"nexus.serial.connect","when":"view == nexusCommandCenter && viewItem == nexus.serialProfile","group":"inline"},
        {"command":"nexus.serial.disconnect","when":"view == nexusCommandCenter && viewItem == nexus.serialProfileConnected","group":"inline"},
        {"command":"nexus.serial.disconnect","when":"view == nexusCommandCenter && viewItem == nexus.serialSessionNode","group":"inline"},

        {"command":"nexus.serial.connect","when":"view == nexusCommandCenter && viewItem == nexus.serialProfile","group":"0_connect"},
        {"command":"nexus.serial.disconnect","when":"view == nexusCommandCenter && viewItem == nexus.serialProfileConnected","group":"0_connect"},

        {"command":"nexus.serial.edit","when":"view == nexusCommandCenter && viewItem =~ /^nexus\\.serialProfile(Connected)?$/","group":"1_manage@1"},
        {"command":"nexus.serial.rename","when":"view == nexusCommandCenter && viewItem =~ /^nexus\\.serialProfile(Connected)?$/","group":"1_manage@2"},
        {"command":"nexus.serial.duplicate","when":"view == nexusCommandCenter && viewItem =~ /^nexus\\.serialProfile(Connected)?$/","group":"1_manage@3"},

        {"command":"nexus.serial.copyInfo","when":"view == nexusCommandCenter && viewItem =~ /^nexus\\.serialProfile(Connected)?$/","group":"2_clipboard"},

        {"command":"nexus.serial.remove","when":"view == nexusCommandCenter && viewItem =~ /^nexus\\.serialProfile(Connected)?$/","group":"3_destructive"},

        {"command":"nexus.tunnel.start","when":"view == nexusTunnels && viewItem == nexus.tunnel","group":"inline"},
        {"command":"nexus.tunnel.stop","when":"view == nexusTunnels && viewItem == nexus.activeTunnel","group":"inline@1"},
        {"command":"nexus.tunnel.restart","when":"view == nexusTunnels && viewItem == nexus.activeTunnel","group":"inline@2"},

        {"command":"nexus.tunnel.start","when":"view == nexusTunnels && viewItem == nexus.tunnel","group":"0_connect"},
        {"command":"nexus.tunnel.stop","when":"view == nexusTunnels && viewItem == nexus.activeTunnel","group":"0_connect@1"},
        {"command":"nexus.tunnel.restart","when":"view == nexusTunnels && viewItem == nexus.activeTunnel","group":"0_connect@2"},

        {"command":"nexus.tunnel.edit","when":"view == nexusTunnels && viewItem =~ /^nexus\\.(tunnel|activeTunnel)$/","group":"1_manage@1"},
        {"command":"nexus.tunnel.duplicate","when":"view == nexusTunnels && viewItem =~ /^nexus\\.(tunnel|activeTunnel)$/","group":"1_manage@2"},

        {"command":"nexus.tunnel.copyInfo","when":"view == nexusTunnels && viewItem =~ /^nexus\\.(tunnel|activeTunnel)$/","group":"2_clipboard"},

        {"command":"nexus.tunnel.remove","when":"view == nexusTunnels && viewItem =~ /^nexus\\.(tunnel|activeTunnel)$/","group":"3_destructive"},

        {"command":"nexus.settings.edit","when":"view == nexusSettings && viewItem == nexus.setting","group":"inline"},
        {"command":"nexus.settings.reset","when":"view == nexusSettings && viewItem == nexus.setting","group":"1_manage"}
      ],
      "commandPalette": [
        {"command":"nexus.refresh","when":"true"},
        {"command":"nexus.server.add","when":"true"},
        {"command":"nexus.server.edit","when":"true"},
        {"command":"nexus.server.connect","when":"true"},
        {"command":"nexus.server.disconnect","when":"true"},
        {"command":"nexus.server.remove","when":"true"},
        {"command":"nexus.server.copyInfo","when":"true"},
        {"command":"nexus.server.duplicate","when":"true"},
        {"command":"nexus.tunnel.add","when":"true"},
        {"command":"nexus.tunnel.edit","when":"true"},
        {"command":"nexus.tunnel.start","when":"true"},
        {"command":"nexus.tunnel.stop","when":"true"},
        {"command":"nexus.tunnel.restart","when":"true"},
        {"command":"nexus.tunnel.remove","when":"true"},
        {"command":"nexus.tunnel.copyInfo","when":"true"},
        {"command":"nexus.tunnel.duplicate","when":"true"},
        {"command":"nexus.serial.add","when":"true"},
        {"command":"nexus.serial.edit","when":"true"},
        {"command":"nexus.serial.connect","when":"true"},
        {"command":"nexus.serial.disconnect","when":"true"},
        {"command":"nexus.serial.remove","when":"true"},
        {"command":"nexus.serial.listPorts","when":"true"},
        {"command":"nexus.serial.copyInfo","when":"true"},
        {"command":"nexus.serial.duplicate","when":"true"},
        {"command":"nexus.server.rename","when":"true"},
        {"command":"nexus.serial.rename","when":"true"},
        {"command":"nexus.group.connect","when":"false"},
        {"command":"nexus.group.disconnect","when":"false"},
        {"command":"nexus.group.rename","when":"false"},
        {"command":"nexus.settings.edit","when":"false"},
        {"command":"nexus.settings.reset","when":"false"},
        {"command":"nexus.settings.openJson","when":"true"},
        {"command":"nexus.settings.openLogDir","when":"true"}
      ]
    },
    "keybindings": [
      {
        "command": "nexus.server.add",
        "key": "ctrl+shift+n",
        "mac": "cmd+shift+n",
        "when": "!terminalFocus"
      }
    ],
    "configuration": {
      "title": "Nexus Terminal",
      "properties": {
        "nexus.logging.maxFileSizeMb": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 1024,
          "order": 1,
          "markdownDescription": "Maximum size of each Nexus log file in MB before rotation."
        },
        "nexus.logging.maxRotatedFiles": {
          "type": "number",
          "default": 1,
          "minimum": 0,
          "maximum": 99,
          "order": 2,
          "markdownDescription": "How many rotated log files Nexus keeps per log stream."
        },
        "nexus.logging.sessionTranscripts": {
          "type": "boolean",
          "default": true,
          "order": 3,
          "markdownDescription": "Log session transcripts for SSH and serial connections by default. Can be overridden per profile."
        },
        "nexus.logging.sessionLogDirectory": {
          "type": "string",
          "default": "",
          "order": 4,
          "markdownDescription": "Directory for session transcript logs. Leave empty to use the default extension storage location."
        },
        "nexus.tunnel.defaultConnectionMode": {
          "type": "string",
          "enum": [
            "isolated",
            "shared"
          ],
          "default": "isolated",
          "order": 5,
          "markdownDescription": "Default SSH connection mode for tunnels.",
          "enumDescriptions": [
            "Each tunnel gets its own SSH connection (more reliable)",
            "Tunnels share a single SSH connection to the same server (lower resource usage)"
          ]
        }
      }
    }
  },
  "scripts": {
    "clean": "rimraf dist coverage",
    "compile": "tsc -p tsconfig.json --noEmit",
    "build": "npm run clean && npm run compile && node esbuild.mjs",
    "build:production": "npm run clean && npm run compile && node esbuild.mjs --production",
    "watch": "tsc -p tsconfig.json --watch --noEmit",
    "test": "vitest run --coverage",
    "test:unit": "vitest run test/unit",
    "test:integration": "vitest run test/integration",
    "package:vsix": "npm run build:production && vsce package"
  },
  "dependencies": {
    "serialport": "^13.0.0",
    "ssh2": "^1.17.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/ssh2": "^1.15.5",
    "@types/vscode": "^1.95.0",
    "@vitest/coverage-v8": "^3.0.9",
    "@vscode/vsce": "^3.3.2",
    "esbuild": "^0.27.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.2",
    "vitest": "^3.0.9"
  }
}
