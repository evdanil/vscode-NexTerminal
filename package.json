{
  "name": "vscode-nexterminal",
  "displayName": "Nexus Terminal",
  "description": "Unified SSH and Serial command center for VS Code.",
  "version": "0.1.6",
  "publisher": "nexus",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/evdanil/vscode-NexTerminal.git"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Terminal",
    "Other"
  ],
  "main": "./dist/extension.js",
  "browser": "./dist/webExtension.js",
  "activationEvents": [
    "onStartupFinished",
    "onView:nexusCommandCenter",
    "onView:nexusTunnels",
    "onView:nexusTunnelMonitor",
    "onCommand:nexus.server.add",
    "onCommand:nexus.server.connect",
    "onCommand:nexus.serial.add",
    "onCommand:nexus.serial.connect"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nexus",
          "title": "Nexus",
          "icon": "media/nexus.svg"
        }
      ]
    },
    "views": {
      "nexus": [
        {
          "id": "nexusCommandCenter",
          "name": "Command Center"
        },
        {
          "id": "nexusTunnels",
          "name": "Port Forwarding"
        },
        {
          "id": "nexusTunnelMonitor",
          "name": "Tunnel Monitor",
          "type": "webview"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "nexusCommandCenter",
        "contents": "No servers or serial devices configured.\n[Add SSH Server](command:nexus.server.add)\n[Add Serial Device](command:nexus.serial.add)\n[Scan Serial Ports](command:nexus.serial.listPorts)"
      },
      {
        "view": "nexusTunnels",
        "contents": "No port-forwarding tunnels configured.\n[Add Tunnel](command:nexus.tunnel.add)\nTip: Drag a tunnel onto a server in Command Center to start it."
      }
    ],
    "commands": [
      {
        "command": "nexus.refresh",
        "title": "Nexus: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "nexus.server.add",
        "title": "Nexus: Add Server",
        "icon": "$(add)"
      },
      {
        "command": "nexus.server.remove",
        "title": "Nexus: Remove Server",
        "icon": "$(trash)"
      },
      {
        "command": "nexus.server.edit",
        "title": "Nexus: Edit Server",
        "icon": "$(edit)"
      },
      {
        "command": "nexus.server.connect",
        "title": "Nexus: Connect Server",
        "icon": "$(plug)"
      },
      {
        "command": "nexus.server.disconnect",
        "title": "Nexus: Disconnect Server",
        "icon": "$(debug-disconnect)"
      },
      {
        "command": "nexus.tunnel.add",
        "title": "Nexus: Add Tunnel",
        "icon": "$(add)"
      },
      {
        "command": "nexus.tunnel.remove",
        "title": "Nexus: Remove Tunnel",
        "icon": "$(trash)"
      },
      {
        "command": "nexus.tunnel.edit",
        "title": "Nexus: Edit Tunnel",
        "icon": "$(edit)"
      },
      {
        "command": "nexus.tunnel.start",
        "title": "Nexus: Start Tunnel",
        "icon": "$(play)"
      },
      {
        "command": "nexus.tunnel.stop",
        "title": "Nexus: Stop Tunnel",
        "icon": "$(debug-stop)"
      },
      {
        "command": "nexus.serial.add",
        "title": "Nexus: Add Serial Profile",
        "icon": "$(add)"
      },
      {
        "command": "nexus.serial.edit",
        "title": "Nexus: Edit Serial Profile",
        "icon": "$(edit)"
      },
      {
        "command": "nexus.serial.remove",
        "title": "Nexus: Remove Serial Profile",
        "icon": "$(trash)"
      },
      {
        "command": "nexus.serial.listPorts",
        "title": "Nexus: List Serial Ports",
        "icon": "$(search)"
      },
      {
        "command": "nexus.serial.connect",
        "title": "Nexus: Connect Serial Port",
        "icon": "$(plug)"
      },
      {
        "command": "nexus.serial.disconnect",
        "title": "Nexus: Disconnect Serial Session",
        "icon": "$(debug-disconnect)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "nexus.refresh",
          "when": "view =~ /^nexus/",
          "group": "navigation"
        },
        {
          "command": "nexus.server.add",
          "when": "view == nexusCommandCenter",
          "group": "navigation@1"
        },
        {
          "command": "nexus.server.connect",
          "when": "view == nexusCommandCenter",
          "group": "navigation@2"
        },
        {
          "command": "nexus.serial.add",
          "when": "view == nexusCommandCenter",
          "group": "navigation@3"
        },
        {
          "command": "nexus.server.disconnect",
          "when": "view == nexusCommandCenter",
          "group": "navigation@4"
        },
        {
          "command": "nexus.tunnel.add",
          "when": "view == nexusTunnels",
          "group": "navigation@1"
        },
        {
          "command": "nexus.tunnel.start",
          "when": "view == nexusTunnels",
          "group": "navigation@2"
        },
        {
          "command": "nexus.tunnel.stop",
          "when": "view == nexusTunnels",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "nexus.server.connect",
          "when": "view == nexusCommandCenter && viewItem == nexus.server",
          "group": "inline"
        },
        {
          "command": "nexus.server.connect",
          "when": "view == nexusCommandCenter && viewItem == nexus.serverConnected",
          "group": "inline"
        },
        {
          "command": "nexus.server.disconnect",
          "when": "view == nexusCommandCenter && viewItem == nexus.serverConnected",
          "group": "inline"
        },
        {
          "command": "nexus.server.disconnect",
          "when": "view == nexusCommandCenter && viewItem == nexus.sessionNode",
          "group": "inline"
        },
        {
          "command": "nexus.server.remove",
          "when": "view == nexusCommandCenter && viewItem == nexus.server",
          "group": "navigation"
        },
        {
          "command": "nexus.server.edit",
          "when": "view == nexusCommandCenter && viewItem == nexus.server",
          "group": "navigation@1"
        },
        {
          "command": "nexus.server.remove",
          "when": "view == nexusCommandCenter && viewItem == nexus.serverConnected",
          "group": "navigation"
        },
        {
          "command": "nexus.server.edit",
          "when": "view == nexusCommandCenter && viewItem == nexus.serverConnected",
          "group": "navigation@1"
        },
        {
          "command": "nexus.server.add",
          "when": "view == nexusCommandCenter && viewItem == nexus.group",
          "group": "navigation@1"
        },
        {
          "command": "nexus.serial.add",
          "when": "view == nexusCommandCenter && viewItem == nexus.group",
          "group": "navigation@2"
        },
        {
          "command": "nexus.serial.connect",
          "when": "view == nexusCommandCenter && viewItem == nexus.serialProfile",
          "group": "inline"
        },
        {
          "command": "nexus.serial.disconnect",
          "when": "view == nexusCommandCenter && viewItem == nexus.serialProfileConnected",
          "group": "inline"
        },
        {
          "command": "nexus.serial.disconnect",
          "when": "view == nexusCommandCenter && viewItem == nexus.serialSessionNode",
          "group": "inline"
        },
        {
          "command": "nexus.serial.remove",
          "when": "view == nexusCommandCenter && viewItem =~ /^nexus\\.(serialProfile|serialProfileConnected)$/",
          "group": "navigation"
        },
        {
          "command": "nexus.serial.edit",
          "when": "view == nexusCommandCenter && viewItem =~ /^nexus\\.(serialProfile|serialProfileConnected)$/",
          "group": "navigation@1"
        },
        {
          "command": "nexus.tunnel.start",
          "when": "view == nexusTunnels && viewItem == nexus.tunnel",
          "group": "inline"
        },
        {
          "command": "nexus.tunnel.stop",
          "when": "view == nexusTunnels && viewItem == nexus.activeTunnel",
          "group": "inline"
        },
        {
          "command": "nexus.tunnel.remove",
          "when": "view == nexusTunnels && viewItem =~ /^nexus\\.(tunnel|activeTunnel)$/",
          "group": "navigation"
        },
        {
          "command": "nexus.tunnel.edit",
          "when": "view == nexusTunnels && viewItem =~ /^nexus\\.(tunnel|activeTunnel)$/",
          "group": "navigation@1"
        }
      ],
      "commandPalette": [
        {
          "command": "nexus.refresh",
          "when": "true"
        },
        {
          "command": "nexus.server.add",
          "when": "true"
        },
        {
          "command": "nexus.tunnel.add",
          "when": "true"
        },
        {
          "command": "nexus.serial.listPorts",
          "when": "true"
        },
        {
          "command": "nexus.serial.add",
          "when": "true"
        },
        {
          "command": "nexus.serial.edit",
          "when": "true"
        },
        {
          "command": "nexus.serial.remove",
          "when": "true"
        },
        {
          "command": "nexus.serial.connect",
          "when": "true"
        },
        {
          "command": "nexus.serial.disconnect",
          "when": "true"
        },
        {
          "command": "nexus.server.edit",
          "when": "true"
        },
        {
          "command": "nexus.tunnel.edit",
          "when": "true"
        },
        {
          "command": "nexus.server.connect",
          "when": "true"
        },
        {
          "command": "nexus.server.disconnect",
          "when": "true"
        },
        {
          "command": "nexus.server.remove",
          "when": "true"
        },
        {
          "command": "nexus.tunnel.remove",
          "when": "true"
        },
        {
          "command": "nexus.tunnel.start",
          "when": "true"
        },
        {
          "command": "nexus.tunnel.stop",
          "when": "true"
        }
      ]
    },
    "keybindings": [
      {
        "command": "nexus.server.add",
        "key": "ctrl+shift+n",
        "mac": "cmd+shift+n",
        "when": "!terminalFocus"
      }
    ],
    "configuration": {
      "title": "Nexus Terminal",
      "properties": {
        "nexus.logging.maxFileSizeMb": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 1024,
          "order": 1,
          "markdownDescription": "Maximum size of each Nexus log file in MB before rotation."
        },
        "nexus.logging.maxRotatedFiles": {
          "type": "number",
          "default": 1,
          "minimum": 0,
          "maximum": 99,
          "order": 2,
          "markdownDescription": "How many rotated log files Nexus keeps per log stream."
        },
        "nexus.tunnel.defaultConnectionMode": {
          "type": "string",
          "enum": [
            "isolated",
            "shared"
          ],
          "default": "isolated",
          "order": 3,
          "markdownDescription": "Default SSH connection mode for tunnels.",
          "enumDescriptions": [
            "Each tunnel gets its own SSH connection (more reliable)",
            "Tunnels share a single SSH connection to the same server (lower resource usage)"
          ]
        }
      }
    }
  },
  "scripts": {
    "clean": "rimraf dist coverage",
    "build": "npm run clean && tsc -p tsconfig.json",
    "watch": "tsc -p tsconfig.json --watch",
    "test": "vitest run --coverage",
    "test:unit": "vitest run test/unit",
    "test:integration": "vitest run test/integration",
    "package:vsix": "vsce package"
  },
  "dependencies": {
    "serialport": "^13.0.0",
    "ssh2": "^1.17.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/ssh2": "^1.15.5",
    "@types/vscode": "^1.95.0",
    "@vscode/vsce": "^3.3.2",
    "@vitest/coverage-v8": "^3.0.9",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.2",
    "vitest": "^3.0.9"
  }
}
